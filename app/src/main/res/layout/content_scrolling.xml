<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/aviaoId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/aviao"
            android:src="@drawable/anim_aviao"
            app:layout_constraintEnd_toStartOf="@+id/carroId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/carroId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/carro"
            android:src="@drawable/anim_carro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/aviaoId"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bicicletaId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/bicicleta"
            android:src="@drawable/anim_bici"
            app:layout_constraintEnd_toStartOf="@+id/caminhaoId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aviaoId" />

        <ImageView
            android:id="@+id/caminhaoId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/caminhao"
            android:src="@drawable/anim_caminhao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bicicletaId"
            app:layout_constraintTop_toBottomOf="@+id/carroId" />

        <ImageView
            android:id="@+id/helicopId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/helicop"
            android:src="@drawable/anim_helicop"
            app:layout_constraintEnd_toStartOf="@+id/motoId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bicicletaId" />

        <ImageView
            android:id="@+id/motoId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/moto"
            android:src="@drawable/anim_moto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/helicopId"
            app:layout_constraintTop_toBottomOf="@id/caminhaoId" />

        <ImageView
            android:id="@+id/ambuId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ambulancia"
            android:src="@drawable/anim_ambu"
            app:layout_constraintEnd_toStartOf="@+id/aviaoMonoId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/helicopId" />

        <ImageView
            android:id="@+id/aviaoMonoId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/aviao_mono"
            android:src="@drawable/anim_aviao_mono"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ambuId"
            app:layout_constraintTop_toBottomOf="@id/motoId" />

        <ImageView
            android:id="@+id/bombId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/bombeiro"
            android:src="@drawable/anim_bombeiro"
            app:layout_constraintEnd_toStartOf="@+id/foguetId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ambuId" />

        <ImageView
            android:id="@+id/foguetId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/foguete"
            android:src="@drawable/anim_foguet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bombId"
            app:layout_constraintTop_toBottomOf="@id/aviaoMonoId" />

        <ImageView
            android:id="@+id/lixoId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/lixo"
            android:src="@drawable/anim_lixo"
            app:layout_constraintEnd_toStartOf="@+id/policiaId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bombId" />

        <ImageView
            android:id="@+id/policiaId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/policia"
            android:src="@drawable/anim_policia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lixoId"
            app:layout_constraintTop_toBottomOf="@id/foguetId" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>